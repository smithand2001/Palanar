<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Creating Course</title>
    <style>
      .form-group {
        margin:10px;
      }
    </style>
</head>
<body>
    <div container-lg>
        <div class="row">
            <%- include("adminHeader") %>
        </div>
        <div class="row">
            <div class="d-flex justify-content-center border-bottom border-dark ">
                <h2>Create a Course</h2>
            </div>
        </div>

        <div class="row">

    <section id="course-form">
        <div class="container-lg">
          <form method="post" action="/adminHome/createCourse/create">
            <div class="form-group">
              <label for="exampleFormControlInput1">Course ID</label>
              <input required name ="courseid" type="text" class="form-control" id="exampleFormControlInput1" placeholder="CPTS_123">
            </div>
            <div class="form-group">
              <label for="exampleFormControlInput1">Course Name</label>
              <input required name ="coursename" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Artificial Intelligence">
            </div>
            <div class="form-group">
              <label for="exampleFormControlSelect1">Semester</label>
              <select name ="semester" class="form-control" id="exampleFormControlSelect1">
                <option value="Spring">Spring</option>
                <option value="Summer">Summer</option>
                <option value="Fall">Fall</option>
              </select>
            </div>
            <div class="form-group">
              <label for="exampleFormControlTextarea1">Course Description</label>
              <textarea name ="coursedesc" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="form-group">
              <input type="number" id="enrollment-limit" name="enrollnum"
              min="50" max="100" value="50" step="10">
              <label for="volume">Enrollment Limit</label>
            </div>
            <div class="form-group">
              <input type="submit" value="Add Course" class="btn btn-primary"></button>
            </div>
          </form>
        </div>
        </section>
    
        </div>

    </div>
</body>
</html>