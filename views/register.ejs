<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Registration</title>
    <style>
        .form-group {
            margin: 10px;
        }
    </style>
</head>

<body>
    <div container-lg>
        <div class="row">
            <div class="d-flex justify-content-center border-bottom border-dark ">
                <h2>New User Registration</h2>
            </div>
        </div>
        <%- include("usermsg") %>

        <div class="row">

            <section id="course-form">
                <div class="container-lg">
                    <form method="post" action="/register/create">
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Username</label>
                            <input required name="username" type="text" class="form-control"
                                id="exampleFormControlInput1" placeholder="Bob123">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Password</label>
                            <input required name="password" type="password" class="form-control"
                                id="exampleFormControlInput1">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">First Name</label>
                            <input name="firstName" type="text" class="form-control"
                                id="exampleFormControlInput1" placeholder="Bob">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Last Name</label>
                            <input name="lastName" type="text" class="form-control"
                                id="exampleFormControlInput1" placeholder="McDonald">
                        </div>
                        <div class="form-group">
                            <label for="phone">Enter your phone number:</label>

                            <input type="tel" name="phoneNumber" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">

                            <small>Format: 123-456-7890</small>
                        </div>
                        <div class="form-group">
                            <label for="admin">Create Admin Account?</label>
                            <input type="checkbox" name="admin">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Add Course" class="btn btn-primary"></button>
                        </div>
                    </form>
                </div>
            </section>

        </div>

    </div>
</body>

</html>